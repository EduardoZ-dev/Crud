@model VirtualLockerAPI.Models.LinkSubmission // Cambia esto según tu proyecto

@{
    ViewData["Title"] = "Link del Producto";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Ingrese el link del producto</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Link" class="form-label text-success">Link</label>
            <input asp-for="Link" class="form-control" placeholder="Ingrese el link" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn" style="background-color: #4da6ff; color: white;">Enviar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}