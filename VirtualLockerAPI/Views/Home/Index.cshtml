@using System.Security.Claims;

@{
    ViewData["Title"] = "";
}

<!-- Contenedor con alineación centrada y estilo -->

<div class="background-info" style="background-color:transparent">
            @if (User.Identity!.IsAuthenticated)
            {
                <h1 class="display-4 mb-4 text-primary">
                    Bienvenido,
                    <span class="fw-bold text-success">
                        @User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault()
                    </span>
                </h1>


            }
            <div style="background-color: transparent">
                <p class="text-success fs-5 mb-4">
                    Ahora tienes acceso a tu casillero. Ya puedes visualizar y editar todas tus compras.
                </p>
            </div>
            <div class="text-center mt-4" style="background-color: rgba(255, 255, 255, 0.5);">
                  <a class="btn btn-success" asp-area="" asp-controller="Item" asp-action="GetList">Ir a mis compras</a>
           </div>
        </div>

