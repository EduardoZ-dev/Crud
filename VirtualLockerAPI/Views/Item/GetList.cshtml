@model List<VirtualLockerAPI.Models.Product>

<h2 class="text-center mb-5 text-success">Lista de Productos</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped table-bordered" style="background-color: rgba(255, 255, 255, 0.5);">
    <thead class="table-success">
        <tr>

            <th>Nombre</th>
            <th>Marca</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th>Creado el</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>

                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>@(product.Price)$</td>
                <td><img src="@product.ImageFileName" width="100" alt="@product.Name" class="img-thumbnail" /></td>
                <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td class="d-flex justify-content-around">
                    <a class="btn btn-warning btn-sm" asp-area="" asp-controller="Item" asp-action="Edit" asp-route-id="@product.Id">Editar</a>
                    <a asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4" style="background-color: rgba(255, 255, 255, 0.5);">
    <a class="btn btn-success" asp-area="" asp-controller="Item" asp-action="Create">Nuevo Producto</a>
</div>
